<head>
<title>新規ﾕｰｻﾞｰ作成</title>
</head>


<body>
  <!--- ﾊﾞﾘﾃﾞｰｼｮﾝ ｴﾗｰﾒｯｾｰｼﾞ表示 --->
  <% if @user.errors.present? %>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%end%>
  <%end%>

<div class="form-wrapper">
  <center>
  <fieldset>
    <%= form_with(model: @user, local: true, class: 'form') do |f| %>
    <div class="form-item">
      <%= f.text_field :name, class: 'form_control',placeholder: "あなたのお名前"%>
    </div>
    <div class="form-item">
      <%= f.text_field :email, class: 'form_control',placeholder: "あなたのメールアドレス" %>
    </div>
    <div class="form-item">  
      <%= f.password_field :password, class: 'form_control',placeholder: "あなたのパスワード" %>
    </div>
    <div class="form-item">  
      <%= f.password_field :password_confirmation, class: 'form_control',placeholder: "パスワード(確認用)"%>
    </div>
    <div class="form-item">  
      <%= f.label :admin, '管理者権限'%>
      <%= f.check_box :admin, class: 'form_control',id: 'form-check-input'%>
    </div>
    <div class="button-panel">
      <%= f.submit '登録', class: 'btn btn-info btn-lg' %>
    </div>
  <%end%>
</body>