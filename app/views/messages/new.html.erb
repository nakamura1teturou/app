<head>
<title>ﾒｯｾｰｼﾞ作成</title>
</head>


<body>
<div class="container">
  <%= form_for @message,:html => {:class => "message_form"} do |f| %>
    <div class = "nice-wrap_title">
      <%= f.label :title, '【タイトル】',class: "nice-label_title"%>
      <%= f.text_field :title, :size=>"60",class: "nice-textbox_title",id: 'title'%>
    </div>
    <div>
    <div class = "nice-wrap">
      <%= f.label :body, '【メッセージ】',class: "nice-label"%>
      <%= f.text_area :body, :size =>'85x15', :maxlength => "5000",class: "nice-textbox",id: 'body'%>
    </div><br><br><br><br><br><br><br><br><br>
    <div>
      <%= f.label :images,"添付" %>
      <%= f.file_field :images, class: 'btn image_form message_image', multiple: true %>
      <!--- preview用 --->
      <ul class='image_preview_container'>
      </ul>
      
      <p><span id='count'></span>/5000文字まで</p>
      <%= f.submit '展開', class: 'btn message_submit'%>
    </div>
  <%end%>
</div>
</body>